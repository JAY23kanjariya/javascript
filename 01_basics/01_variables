// 01. variables in javascript

// const - fixed value
const accountId = 7025;
// accountId = 7000; // not allowed

// let - scope is define
let accountEmail = "abc@gmail.com";

// var - global available variable
var accountPassword = "12345";

/* 
    prefer not use var
    because of issue in block scope or function scope.
*/

// undefined not prefer
accountCity = "bhavnagar";

accountEmail = "def@gmail.com";
accountPassword = "67891";
accountCity = "ahmedabad";

console.table([accountId,accountEmail,accountPassword,accountCity]);